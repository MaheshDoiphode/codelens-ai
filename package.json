{
  "name": "fileintegrator",
  "displayName": "fileintegrator",
  "description": "VS Code extension for drag and drop file integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onView:fileIntegratorView"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileintegrator.openFileIntegrator",
        "title": "Open File Integrator"
      },
      {
        "command": "fileintegrator.generateCodeBlock",
        "title": "Generate Code Block"
      },
      {
        "command": "fileintegrator.copyToClipboard",
        "title": "Copy Code Block to Clipboard"
      },
      {
        "command": "fileintegrator.clearFiles",
        "title": "Clear All Files"
      },
      {
        "command": "fileintegrator.removeFile",
        "title": "Remove File",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-integrator",
          "title": "File Integrator",
          "icon": "resources/file-integrator.svg"
        }
      ]
    },
    "views": {
      "file-integrator": [
        {
          "id": "fileIntegratorView",
          "name": "Drop Files Here"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "fileintegrator.removeFile",
          "when": "view == fileIntegratorView",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "fileintegrator.generateCodeBlock",
          "when": "view == fileIntegratorView",
          "group": "navigation"
        },
        {
          "command": "fileintegrator.copyToClipboard",
          "when": "view == fileIntegratorView",
          "group": "navigation"
        },
        {
          "command": "fileintegrator.clearFiles",
          "when": "view == fileIntegratorView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
